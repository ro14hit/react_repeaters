import React,{useState} from 'react';
import Box from '@mui/material/Box';
import Typography from '@mui/material/Typography';
import Grid from '@mui/material/Grid';
import TextField from '@mui/material/TextField';
import Button from '@mui/material/Button';

export default function RegistrationForm() {

    const[userRegistration,setUserRegistration] = useState({
          name:"",
          username:"",
          email:"",
          phone:"",
          password:""

    });

   const[records, setRecords] = useState([]);

    const handleInput = () =>{
      const name = event.target.name;
      const value = event.target.value;
      setUserRegistration({...userRegistration, [name] : value})
    }

    const handleSubmit = (event) =>{
      event.preventDefault();

      const newRecord = { ... userRegistration, id: new Date().getTime().toString() };
      console.log(records);
      setRecords([...records, newRecord]);
      console.log(records);

      setUserRegistration({name:"",username:"", email:"",phone:"", password:""})
    }

    
  return (
    <>
    <Box
     style={{padding:"2%", border: "1px solid red", margin:"2%", borderRadius:"1%"}}
     component ="form"
     action = ""
     onSubmit={handleSubmit}
    >
     <Typography variant="h5" Align="center" style={{marginBottom:"2%"}}>
        Registration Form
      </Typography>
      <Grid  container spacing={3} columns={16}>
      <Grid item xs={8}>
        <TextField id="name" autoComplete="off" onChange={handleInput} name="name" label="Name" variant="outlined"  placeholder="Enter your name" fullWidth />
        </Grid>
        <Grid item xs={8}>
        <TextField id="username" autoComplete="off" onChange={handleInput} name="username" label="User Name" focused variant="outlined" fullWidth />
        </Grid>
        <Grid item xs={8}>
        <TextField id="email" size="small" autoComplete="off" onChange={handleInput} name="email" label="Email" variant="outlined" fullWidth />
        </Grid>
        <Grid item xs={8}>
        <TextField id="phone" size="large" autoComplete="off" onChange={handleInput} name="phone" label="Phone" variant="outlined" fullWidth />
        </Grid>
        <Grid item xs={8}>
        <TextField id="password" autoComplete="off" onChange={handleInput} name="password" label="Password" variant="outlined" fullWidth />
        </Grid>
      </Grid>

      <Button variant="contained" type="submit" style={{marginTop:"2%"}}>Submit</Button>

    </Box>

    </>
  );
}
